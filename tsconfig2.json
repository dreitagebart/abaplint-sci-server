{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "build",
    "incremental": true,
    "pretty": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "declaration": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "alwaysStrict": true,
    "target": "es2017",
    "sourceMap": true,
    "resolveJsonModule": true
  },
  "include": [
    "index.ts",
    "./src/**/*.ts"
  ]
}
